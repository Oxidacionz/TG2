{
  "compilerOptions": {
    "types": ["vite/client"],

    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],

    "jsx": "react-jsx",
    "useDefineForClassFields": true,
    "isolatedModules": true,
    "moduleDetection": "force",

    "strict": false,
    "skipLibCheck": true,
    "noEmit": true,

    "paths": {
      "@/*": ["./*"]
    },

    "allowJs": false,
    "experimentalDecorators": false,
    "allowImportingTsExtensions": false
  },

  "include": ["src"]
}
